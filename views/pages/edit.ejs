<ol class="breadcrumb">
  <li class="breadcrumb-item"><a href="/article/list">Articles</a></li>
  <li class="breadcrumb-item active">Edit</li>
</ol>
<h1 class="display-4">Edit Article</h1>
<form method="post" action="/article/update/<%= article.id %>">
  <div class="form-group">
    <label for="title">Title</label>
    <input
      type="text"
      name="title"
      class="form-control"
      value="<%= article.title %>"
    />
  </div>
  <div class="form-group">
    <label for="body">Body</label>
    <textarea name="body" class="form-control"><%= article.body %></textarea>
  </div>
  <div class="form-group mt-3 d-flex justify-content-end">
    <input type="submit" value="Submit" class="btn btn-primary" />
  </div>
</form>
